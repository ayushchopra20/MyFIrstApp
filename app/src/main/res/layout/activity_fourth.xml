<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_4th"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FFFFFF">

    <!-- Accelerometer Sensor -->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:tag="sensor_data"
            android:id="@+id/first_sensor"
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="Accelerometer"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/accelerometerSnsrDta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/sensor_info_background"
            android:padding="10dp"
            android:text="Status: Accelerometer is Present\nInfo: Range, Resolution, Delay"
            android:textSize="12dp" />
    </LinearLayout>

    <!-- Proximity Sensor -->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:tag="sensor_data"
            android:id="@+id/second_sensor"
            android:layout_width="10dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="Proximity"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/proximitySnsrDta"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/sensor_info_background"
            android:padding="10dp"
            android:text="Status: Proximity is Present\nInfo: Range, Resolution, Delay"
            android:textSize="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:onClick="goBack"
        android:padding="10dp"
        android:text="Back" />
</LinearLayout>
